@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Acceso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>BackOffice | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>

    <div class="login-wrapper">

        <!-- PANEL IZQUIERDO (IMAGEN) -->
        <div class="login-illustration">
           <img src="~/images/draw2.svg" />
        </div>

        <!-- PANEL DERECHO (FORM) -->
        <div class="login-card">
            <h2>BackOffice</h2>
            <p>Acceso al sistema</p>

            <form method="post">
                <div class="form-group">
                    <label>Usuario</label>
                    <input asp-for="Usuario" placeholder="Ingrese su usuario" />
                </div>

                <div class="form-group">
                    <label>Contraseña</label>
                    <input asp-for="Password" type="password" placeholder="••••••••" />
                </div>

                <button type="submit" class="btn-login">Ingresar</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error">@Model.ErrorMessage</div>
            }

            <div class="footer">
                <p>  © @DateTime.Now.Year · BackOffice</p>
            </div>
        </div>

    </div>



</body>
</html>
