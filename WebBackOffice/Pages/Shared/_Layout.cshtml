@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BackOffice Lab</title>
    <!-- Agrega esta línea para el CSS de Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <link rel="stylesheet" href="~/css/PlanAccion.css" />
</head>

<body>

<div class="layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <h2>BackOffice Lab</h2>

        <div class="menu-item">
            <span>📘 Aprendizaje</span>
            <div class="submenu">
                <a asp-page="/Aprendizaje/Dashboard">📊 Dashboard</a>
                <a asp-page="/Aprendizaje/PlanAccion">📝 Plan de Acción</a>
            </div>
        </div>
    </aside>

    <!-- CONTENT -->
    <main class="content">

       <div class="topbar">
    <h1>@ViewData["Title"]</h1>

    <div class="user-menu">
        <span class="user-name">
            👤 @Context.Session.GetString("Username")
        </span>

       @*  <a asp-page="/BackOffice/CambiarPassword" class="user-link">
            🔑 Cambiar password
        </a> *@

                    <a asp-page="/BackOffice/Logout" class="user-link logout">
            🚪 Cerrar sesión
        </a>
    </div>
</div>
        @RenderBody()

    </main>

</div>
  
</body>
<script src="js/site.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>

