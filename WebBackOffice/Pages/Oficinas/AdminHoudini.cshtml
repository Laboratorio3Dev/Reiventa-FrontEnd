        })
        .then(r => r.json())
        .then(data => {
            mostrarMensaje(data.message, data.isSuccess ? 'success' : 'danger');

            if (data.isSuccess) {
                setTimeout(() => {
                    window.location.reload();
                }, 1200);
            }
        })
        .catch(() => {
            mostrarMensaje('Error inesperado', 'danger');
        });
        }
    }


    async function cambiarPagina(page) {
        const search = document.querySelector('[name="SearchTerm"]')?.value || '';

        const html = await fetch(
            `?handler=TablaProductos&pageNumber=${page}&searchTerm=${encodeURIComponent(search)}`
        ).then(r => r.text());

        document.getElementById('contenedorTabla').innerHTML = html;
    }

</script>

