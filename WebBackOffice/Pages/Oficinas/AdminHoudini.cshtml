     function cambiarEstado(id, activar) {
        const texto = activar ? 'activar' : 'desactivar';

        if (!confirm(`¿Deseas ${texto} este producto?`)) return;

        showLoading();

        fetch(`?handler=CambiarEstadoProducto`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken':
                    document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify({
                idProducto: id,
                activar: activar
            })
        })
        .then(r => r.json())
        .then(data => {
            if (!data.isSuccess) {
                mostrarMensaje(data.message, 'danger');
                return;
            }

            // 🔁 Cambiar botón dinámicamente
            const btn = document.getElementById(`btn-estado-${id}`);

            if (activar) {
                btn.className = 'btn btn-outline-danger btn-sm';
                btn.innerText = 'Desactivar';
                btn.onclick = () => cambiarEstado(id, false);
            } else {
                btn.className = 'btn btn-outline-success btn-sm';
                btn.innerText = 'Activar';
                btn.onclick = () => cambiarEstado(id, true);
            }
           MuestraMensaje("CORRECTO.", data.message, "OK")
         
        })
        .catch(() => {
           MuestraMensaje("ERROR.","Error inesperado", "E")
        })
        .finally(() => {
            hideLoading();
        });
    }

    function desactivarProducto(id) {
        if (!confirm('¿Deseas desactivar este producto?')) return;

        fetch(`?handler=DesactivarProducto&id=${id}`, {
            method: 'POST',
            headers: {
                'RequestVerificationToken':
                    document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        })
        .then(r => r.json())
        .then(data => {
            mostrarMensaje(data.message, data.isSuccess ? 'success' : 'danger');

            if (data.isSuccess) {
                setTimeout(() => {
                    window.location.reload();
                }, 1200);
            }
        })
        .catch(() => {
            mostrarMensaje('Error inesperado', 'danger');
        });
    }


        async function activarProducto(id) {
        if (confirm("¿Estás seguro de que deseas activar este producto?")) {


